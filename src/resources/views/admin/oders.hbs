<div class="container p-5">
  <div class="row">
    <form style="width:1000px" method="get" action="/admin/Categories">
      <div class="form-group">
        <label for="exampleInputEmail1">Thêm Categories</label>
        <input
        name="Categories_name"
          type="text"
          class="form-control"
          placeholder="Nhập tên Categories"
        />
      </div>
      <button type="submit" name="Categories_btn" value="add" class="btn btn-primary">Nhập</button>
    </form>
  </div>
  <h4 class="mt-5">
    Danh sách oders
  </h4>
  <table class="table mt-5">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">tên</th>
        <th scope="col">tài khoản</th>
        <th scope="col">số điện thoại</th>
        <th scope="col">địa chỉ</th>
        <th scope="col">ngày tạo</th>
        <th scope="col">trạng thái</th>
        <th scope="col">xóa</th>
        <th scope="col">thao tác</th>
      </tr>
    </thead>
    <tbody id="tableCategories">
      {{#each oders}}
     <tr>
      <td>{{this.id}}</td>
      <td>{{this.customer_name}}</td>
      <td>{{this.customer_email}}</td>
      <td>{{this.customer_address}}</td>
      <td>{{this.customer_email}}</td>
      <td>{{this.created_date}}</td>
      <td>{{this.status}}</td>
      <td>
        <a href="/admin/oders/detail?id={{this.id}}" class="btn btn-danger">Xem chi tiết</a>
    </td>
    <td>
        <a href="/admin/oders/accept?id={{this.id}}" class="btn btn-primary">Xác nhận</a>
    </td>
    </tr>
    {{/each}}
    </tbody>
      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
    </tbody>
  </table>
</div>
