<div class="container p-5">
  <div class="row">
    <form style="width:1000px" method="get" action="/admin/Categories">
      <div class="form-group">
        <label for="exampleInputEmail1">Thêm Categories</label>
        <input
        name="Categories_name"
          type="text"
          class="form-control"
          placeholder="Nhập tên Categories"
        />
      </div>
      <button type="submit" name="Categories_btn" value="add" class="btn btn-primary">Nhập</button>
    </form>
  </div>
  <h4 class="mt-5">
    Danh sách Categories
  </h4>
  <table class="table mt-5">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Tên Categories</th>
        <th scope="col">Thao tác</th>
      </tr>
    </thead>
    <tbody id="tableCategories">
       {{{Categorieslist}}}
    </tbody>
      
    </tbody>
  </table>
</div>