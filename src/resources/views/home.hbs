<div class="hero">
  {{#if banner}}
    <div class="container">
      <div class="row justify-content-between">
        <div class="col-lg-5">
          <div class="intro-excerpt">
            <h1>
              {{banner.name}}
            </h1>

            <p>
              <a
                href="/sanpham/sanphamchitiet?id=9"
                class="btn btn-secondary me-2"
              >Mua Ngay </a>
              <a href="/sanpham" class="btn btn-white-outline">Xem Thêm</a>
            </p>
          </div>
        </div>
        <div class="col-lg-7">
          <div class="hero-img-wrap">
            <img
              src="https://hardwarecorpus.in/cdn/shop/files/M1W_7c8eeaf6-d5ca-44c5-a780-19241f6b5dba.png?v=1700495459&width=1000"
              width="436px"
              class="img-fluid"
            />
          </div>
        </div>
      </div>
    </div>
  {{/if}}
</div>
<!-- End Hero Section -->

<!-- Start Product Section -->
<div class="product-section">
  <div class="container">
    <div class="row">
      {{#each productlist}}
        <div class="col-12 col-md-4 col-lg-3 mb-5 mb-md-0">
          <a class="product-item" href="/sanpham/sanphamchitiet?id={{this.id}}">
            <img src="{{this.image}}" class="img-fluid product-thumbnail" />
            <h3 class="product-title">{{this.brand}}</h3>
            <strong class="product-price">{{this.price}}</strong>

            <span class="icon-cross">
              <img src="/images/cross.svg" class="img-fluid" />
            </span>
          </a>
        </div>
      {{/each}}
    </div>
  </div>
</div>
<!-- End Product Section -->

<!-- Start Why Choose Us Section -->
