<div class="hero">
  <div class="container">
    <div class="row justify-content-between">
      <div class="col-lg-5">
        <div class="intro-excerpt">
          <h1>Danh sách sản phẩm</h1>
        </div>
      </div>
      <div class="col-lg-7"></div>
    </div>
  </div>
</div>
<div class="container">
  <div class="d-flex">
    <nav
      id="sidebarMenu"
      class="collapse d-lg-block sidebar collapse bg-white col-2"
      style="flex:1"
    >
      <div class="position-sticky">
        <div class="list-group list-group-flush mx-3 mt-4">
          <a href="/sanpham" class="list-group-item sidebar-link">
            <span>Tất cả sản phẩm</span>
          </a>
          {{#each producttype}}
            <a
              href="/sanpham?idcate={{this.id}}"
              class="list-group-item sidebar-link"
            >
              <span>{{this.name}}</span>
            </a>
          {{/each}}
        </div>
      </div>
      <div style="padding: 20px; border: 1px solid #ddd; border-radius: 5px;">
        <h4 style="margin-top: 5px;">Lọc theo giá</h4>
        <form action="/sanpham" method="get">
          <label for="priceRange">Chọn giá:</label>
          <input
            type="range"
            style="width: 100%;"
            id="priceRange"
            name="priceRange"
            min="0"
            max="10000000"
            step="10000"
          />
          <output
            for="priceRange"
            style="display: block; margin-top: 10px; font-weight: bold;"
            id="selectedPrice"
          >0 VND</output>
          <button
            type="submit"
            style="margin-top: 10px;"
            class="btn btn-primary form-control"
          >Lọc</button>
        </form>
      </div>

    </nav>
    <div
      style="flex:6"
     class="untree_co-section product-section before-footer-section">
      <div class="container">
        <div class="row">
          <!-- Start Column 1 -->
          {{! <div class="col-12 col-md-4 col-lg-3 mb-5"> }}
          {{! <a class="product-item" href="sanphamchitiet?id=1/">
          <img
            src="/images/product-3.png"
            class="img-fluid product-thumbnail"
          />
          <h3 class="product-title">Nordic Chair</h3>
          <strong class="product-price">$50.00</strong>

          <span class="icon-cross">
            <img src="/images/cross.svg" class="img-fluid" />
          </span>
        </a>
      </div> }}
          {{#each productlist}}
            <div class="col-12 col-md-4 col-lg-3 mb-5">
              <a
                class="product-item"
                href="/sanpham/sanphamchitiet?id={{this.id}}"
              >
                <img
                  src="{{this.image}}"
                  class=""
                  width="246px"
                  height="246px"
                  fit="cover"
                />
                <h3 class="product-title">{{this.brand}}
                  {{this.model}}</h3>
                <strong class="product-price">
                  {{this.price}}
                </strong>

                <span class="icon-cross">
                  <img src="/images/cross.svg" class="img-fluid" />
                </span>
              </a>
            </div>
          {{/each}}
        </div>
        <nav aria-label="Page navigation example">
          <ul class="pagination justify-content-center">
            <li class="page-item disabled">
              <a class="page-link" href="#" tabindex="-1">Lùi</a>
            </li>
            {{#each pageindex}}
              <li class="page-item">
                <a class="page-link" href="/sanpham?page={{this}}">{{this}}</a>
              </li>
            {{/each}}
            
              <a class="page-link" href="#">Tiến</a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</div>

